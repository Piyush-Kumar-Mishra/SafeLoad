<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TaskDetailsActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="508dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Task Details"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="416dp"
        android:layout_height="683dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="383dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp">

            <EditText
                android:id="@+id/etStartingLocation"
                android:layout_width="295dp"
                android:layout_height="match_parent"
                android:focusable="false"
                android:hint="Starting Location" />

            <ImageButton
                android:id="@+id/btnEnterStartingLocation"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:background="@color/white"
                android:backgroundTint="#00EBDCDC"
                android:scaleType="centerInside"
                android:src="@drawable/show1" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="382dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp">

            <EditText
                android:id="@+id/etEndingLocation"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:hint="Ending Location" />

            <ImageButton
                android:id="@+id/btnEnterEndingLocation"
                android:layout_width="47dp"
                android:layout_height="47dp"
                android:layout_gravity="center_vertical"
                android:background="@color/white"
                android:backgroundTint="#00FFFFFF"
                android:scaleType="centerInside"
                android:src="@drawable/show1" />


        </LinearLayout>


        <Button
            android:id="@+id/btnSaveTask"
            android:layout_width="160dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:backgroundTint="#29313E"
            android:shadowColor="#29313E"
            android:text="Submit"
            android:textSize="20dp"
            app:cornerRadius="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.871" />


    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="528dp"
        android:layout_height="243dp"
        android:layout_marginBottom="-10dp"
        android:src="@drawable/globe1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>